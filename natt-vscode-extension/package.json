{
  "name": "natt-configuration-editor",
  "icon": "resources/logo.png",
  "displayName": "NATT Configuration Editor",
  "publisher": "0xM4R71N",
  "repository": "https://github.com/0xMartin/NetworkAppTestingTool",
  "description": "Test scenario configuration editor for black box network application testing tool.",
  "version": "1.2.5",
  "engines": {
    "vscode": "^1.91.1"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.nattInit",
        "title": "NATT Init"
      },
      {
        "command": "extension.nattRun",
        "title": "NATT Run"
      },
      {
        "command": "extension.nattStop",
        "title": "NATT Stop"
      },
      {
        "command": "extension.nattShow",
        "title": "NATT Show Report"
      },
      {
        "command": "extension.nattValidate",
        "title": "NATT Validate"
      },
      {
        "command": "extension.nattReload",
        "title": "NATT Reload"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nattContainer",
          "title": "NATT Configuration Editor",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "nattContainer": [
        {
          "type": "webview",
          "id": "homeView",
          "name": "Home"
        }
      ],
      "explorer": [
        {
          "id": "nattReportView",
          "name": "NATT Report"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.14",
    "@types/vscode": "^1.91.1",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "configuration": {
    "type": "object",
    "title": "NATT Configuration Editor Settings",
    "properties": {
      "yourExtension.nattJarUrl": {
        "type": "string",
        "default": "https://github.com/0xMartin/NetworkAppTestingTool/releases/download/1.6.5/NATT.jar",
        "description": "URL for the NATT JAR file"
      }
    }
  }
}